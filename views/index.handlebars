

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <h2>Create a burger</h2>
            <form method="POST" action="/burgers" >
                <input type="text" name="burger_name" />
                <input type="submit" value="Create Burger" />
                
            </form>
        </div>
        <div class="col-md-4">
            <h2>Undevoured burgers</h2>
            <ul>
                {{#each burgers}}
                    {{#unless this.devoured}}
                        <li>
                            {{burger_name}} 
                            <button onclick="eatTheBurger(this)" data-id="{{this.id}}">Eat the burger</button>
                        </li>
                    {{/unless}}
                {{/each}}
            </ul>
        </div>
        <div class= "col-md-4"><img style="width:200px ;" src="butger_pic.jpg" alt="Burger"></div>
        <div class="col-md-4">
            <h2>Devoured burgers</h2>
            <ul>
                {{#each burgers}}
                    {{#if this.devoured}}
                        <li>{{burger_name}} <button onclick="deleteTheBurger(this)" data-id="{{this.id}}">Delete burger</button></li>
                        
                    {{/if}}
                {{/each}}
            </ul>
        </div>
    </div>
</div>
<script>
function eatTheBurger(element){
    let id = element.getAttribute("data-id")
    $.ajax({
    url: `/burgers/${id}`,
    type: 'PUT',
    success: function(result) {
        location.reload()
    }
});
}

function deleteTheBurger(element){
    let id = element.getAttribute("data-id")
    $.ajax({
    url: `/burgers/${id}`,
    type: 'DELETE',
    success: function(result) {
        location.reload()
    }
});
}
</script>

